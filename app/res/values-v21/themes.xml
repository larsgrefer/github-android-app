<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="Theme.GitHub" parent="@style/Theme.AppCompat.NoActionBar">

        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryDark">@color/primary_dark</item>
        <item name="colorAccent">@color/accent</item>

        <item name="actionBarPopupTheme">@style/ThemeOverlay.AppCompat.Dark</item>

        <item name="actionBarStyle">@style/Widget.Styled.ActionBar</item>
        <item name="android:actionBarStyle">@style/Widget.Styled.ActionBar</item>
        <item name="windowActionBar">false</item>
        <item name="android:windowBackground">@color/background</item>

        <item name="ic_action_add">@drawable/ic_add_white_24dp</item>
        <item name="ic_action_bookmark">@drawable/ic_bookmark_white_24dp</item>
        <item name="ic_action_comment">@drawable/ic_comment_white_24dp</item>
        <item name="ic_action_delete">@drawable/ic_delete_white_24dp</item>
        <item name="ic_action_delete_history">@drawable/ic_history_white_24dp</item>
        <item name="ic_action_done">@drawable/ic_done_white_24dp</item>
        <item name="ic_action_edit">@drawable/ic_edit_white_24dp</item>
        <item name="ic_action_filter">@drawable/ic_filter_list_white_24dp</item>
        <item name="ic_action_random">@drawable/ic_shuffle_white_24dp</item>
        <item name="ic_action_refresh">@drawable/ic_refresh_white_24dp</item>
        <item name="ic_action_star">@drawable/ic_star_white_24dp</item>
    </style>

    <style name="Theme.GitHub.NavigationDrawer" parent="Theme.GitHub">
        <item name="android:windowTranslucentStatus">true</item>
        <item name="colorControlHighlight">@color/ripple_material_light</item>
    </style>

</resources>